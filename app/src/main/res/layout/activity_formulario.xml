            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/formularioAdop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="5dp"
                android:background="#ff872b"
                android:text="@string/formulario_de_adopci_n"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="serif" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:hint="Nombre de la mascota"
                android:inputType="textPersonName"
                android:id="@+id/d1"
                />

            <TextView
                android:id="@+id/contact_form_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#ff872b"
                android:text="Datos del Adoptante"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:typeface="serif" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:hint="Nombre completo"
                android:inputType="textPersonName"
                android:id="@+id/d2"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:hint="Dirección"
                android:inputType="textPostalAddress"
                android:id="@+id/d3"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:hint="Correo"
                android:inputType="textEmailAddress"
                android:id="@+id/d4"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:hint="Numero interior o exterior"
                android:inputType="phone"
                android:id="@+id/d5"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:hint="Telefóno Celular"
                android:inputType="phone"
                android:id="@+id/d6"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:hint="Estado"
                android:inputType="textPostalAddress"
                android:id="@+id/d7"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:hint="Colonia"
                android:inputType="textPostalAddress"
                android:id="@+id/d8"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:hint="Ciudad"
                android:inputType="textPostalAddress"
                android:id="@+id/d9"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:hint="Telefóno Casa"
                android:inputType="phone"
                android:id="@+id/d10"
                />

            <TextView
                android:id="@+id/contact_dir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#ff872b"
                android:text="Dirección"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:typeface="serif" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:hint="Calle (avenida o privada)"
                android:inputType="textPostalAddress"
                android:id="@+id/d11"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:hint="Número interior o exterior"
