                android:id="@+id/d13"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:hint=" Entre calle"
                android:inputType="textPostalAddress"
                android:id="@+id/d14"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:hint="Y calle"
                android:inputType="textPostalAddress"
                android:id="@+id/d15"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:hint=" Ciudad (Ingresa ciudad o municipio)"
                android:inputType="textPostalAddress"
                android:id="@+id/d16"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:hint="Estado"
                android:inputType="textPostalAddress"
                android:id="@+id/d17"
                />

            <TextView
                android:id="@+id/contact_enc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#ff872b"
                android:text="Encuesta"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:typeface="serif" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/colorPrimaryDark"
                android:hint="¿Por qué deseas adoptar un perro o un gato?"
                android:inputType="textPostalAddress"
                android:textSize="17.8sp"
                android:id="@+id/d18"
                />

            <TextView
                android:id="@+id/contact_manut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Persona encargada de la manutención"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15sp"
                android:typeface="serif"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
