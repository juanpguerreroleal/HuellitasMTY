                android:inputType="textPersonName"
                android:textSize="10sp"
                android:id="@+id/d31"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:hint="¿Qué opinas sobre la Esterilización en perros y gatos? (Explica brevemente)."
                android:inputType="textPersonName"
                android:textSize="10sp"
                android:id="@+id/d32"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:hint="Dános tu opinión sobre la venta de mascotas. (Explica brevemente)."
                android:inputType="textPersonName"
                android:textSize="10sp"
                android:id="@+id/d33"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



            </LinearLayout>


                <TextView
                    android:id="@+id/enfermded"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:text="LA ADOPCIÓN DE UNA MASCOTA ES UN ACTO DE AMOR PERO TAMBIÉN DE RESPONSABILIDAD, CONSCIENTE DE ELLO, RATIFICO QUE EN CASO DE YA NO PODER TENER A LA MASCOTA, SEA CUAL SEA LA RAZÓN, ME COMPROMETO A ENTREGARLO DE VUELTA A LA ASOCIACIÓN QUE ME LO DIÓ EN ADOPCIÓN, NO ABANDONARLO NI HABLARLE AL ANTIRRÁBICO."
                    android:textColor="#000000"
                    android:textSize="10sp"
                    android:typeface="serif" />

            <Button
