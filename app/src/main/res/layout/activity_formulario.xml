                <CheckBox
                    android:layout_width="73dp"
                    android:layout_height="wrap_content"
                    android:text="Yo"
                    android:id="@+id/d19_1"
                    />

                <CheckBox
                    android:layout_width="108dp"
                    android:layout_height="wrap_content"
                    android:text="Padres"
                    android:id="@+id/d19_2"
                    />

                <CheckBox
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:text="Amigo"
                    android:id="@+id/d19_3"
                    />

                <CheckBox
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Otro"
                    android:id="@+id/d19_4"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/anter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="¿Anteriormente has tenido perros o gatos?"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15sp"
                android:typeface="serif" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <CheckBox
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="SI"
                    android:id="@+id/d20_1"
                    />

                <CheckBox
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="NO"
                    android:id="@+id/d20_2"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/encant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="¿Actualmente cuentas con otra mascota?"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15sp"
                android:typeface="serif" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <CheckBox
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="SI"
                    android:id="@+id/d21_1"
                    />

                <CheckBox
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="NO"
                    android:id="@+id/d21_2"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/mascaant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Describe el (los) tipo(s) de mascota(s) que tengas."
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15sp"
                android:typeface="serif" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:inputType="textPersonName"
                    android:id="@+id/d22"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/ant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="¿Todos en tu familia están de acuerdo con la adopción?"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15sp"
                android:typeface="serif" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <CheckBox
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="SI"
                    android:id="@+id/d23_1"
                    />

                <CheckBox
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="NO"
                    android:id="@+id/d23_2"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/tiempocs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="¿Cada cuando visitas al veterinario?"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15sp"
                android:typeface="serif" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 Meses"
                    android:id="@+id/d24_1"
                    />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6 Meses"
                    android:id="@+id/d24_2"
                    />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cada año"
                    android:id="@+id/d24_3"
                    />

                <CheckBox
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="No necesario"
                    android:textSize="10dp"
                    android:id="@+id/d24_4"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/exst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="¿Existe un miembro de la familia con problemas alérgicos?"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15sp"
                android:typeface="serif" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <CheckBox
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="SI"
                    android:id="@+id/d25_1"
                    />

                <CheckBox
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="NO"
                    android:id="@+id/d25_2"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/exsttm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="¿Existe un miembro de la familia con temor a perros o gatos?"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15sp"
                android:typeface="serif" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <CheckBox
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="SI"
                    android:id="@+id/d26_1"
                    />

                <CheckBox
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="NO"
                    android:id="@+id/d26_2"
                    />

            </LinearLayout>


            <TextView
                android:id="@+id/lugarr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Describe el lugar que habitará la mascota (Dimensiones y características)."
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15sp"
                android:typeface="serif" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:inputType="textPersonName"
                    android:id="@+id/d27"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/cuidados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="¿Conoces los cuidados que debe tener un perro? (Menciona cuales son)."
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15sp"
                android:typeface="serif" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:inputType="textPersonName"
                    android:id="@+id/d28"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/contact_dissr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#ff872b"
                android:text="Motivos que se pueden presentarse para continuar con el cuidado de la mascota."
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/tiempoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="¿Cuáles serían las causas que pudieran evitar seguir cuidando a tu perro?"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15sp"
                android:typeface="serif" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Embarazo"
                    android:id="@+id/d29_1"
                    />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Problemas económicos"
                    android:id="@+id/d29_2"
                    />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comportamiento"
                    android:id="@+id/d29_3"
                    />

                <CheckBox
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Cambio de residencia"
                    android:id="@+id/d29_4"
                    />

                <CheckBox
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Enfermedad"
                    android:id="@+id/d29_5"
                    />

                <CheckBox
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Otro"
                    android:id="@+id/d29_6"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/enfrms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Si a tu mascota se le presenta una enfermedad larga, costosa o tediosa ¿podías enfrentarla?"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15sp"
                android:typeface="serif" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <CheckBox
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="SI"
                    android:id="@+id/d30_1"
                    />

                <CheckBox
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="NO"
                    android:id="@+id/d30_2"
                    />

            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
