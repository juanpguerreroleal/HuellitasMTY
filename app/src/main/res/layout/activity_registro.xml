<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.adoptamty.adoptamty.Registro"
    tools:ignore="ExtraText"
    android:background="@drawable/original">

    <ImageView
        android:id="@+id/formback"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/original" />

    <ImageView
        android:id="@+id/formlogo"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_above="@+id/CC2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_hm" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/formlogo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="75dp"
        android:layout_marginStart="50dp"
        android:background="@drawable/rounded_white"
        android:drawableLeft="@drawable/ic_logo4"
        android:textSize="15dp"
        android:drawablePadding="5dp"
        android:paddingStart="10dp"
        android:hint="Correo"
        android:id="@+id/Correo"
        android:paddingLeft="10dp"
        android:layout_marginLeft="50dp" />

    <EditText
        android:id="@+id/Contraseña"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/formlogo"
        android:layout_alignEnd="@+id/Correo"
        android:layout_alignLeft="@+id/Correo"
        android:layout_alignRight="@+id/Correo"
        android:layout_alignStart="@+id/Correo"
        android:layout_marginBottom="17dp"
        android:background="@drawable/rounded_white"
        android:drawableLeft="@drawable/ic_logo5"
        android:drawablePadding="15dp"
        android:hint="Contraseña"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/CC2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/Registrarse"
        android:layout_alignEnd="@+id/Contraseña"
        android:layout_alignLeft="@+id/Contraseña"
        android:layout_alignRight="@+id/Contraseña"
        android:layout_alignStart="@+id/Contraseña"
        android:background="@drawable/rounded_white"
        android:drawableLeft="@drawable/ic_logo3"
        android:drawablePadding="15dp"
        android:hint="Confirmar contraseña"
        android:paddingLeft="40dp"
        android:paddingStart="10dp"
        android:textSize="15dp" />

    <Button
        android:id="@+id/Registrarse"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="21dp"
        android:layout_margin="40dp"
        android:background="@drawable/rounded_black"
        android:hint="Registrarse"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15dp" />
    
</RelativeLayout>
